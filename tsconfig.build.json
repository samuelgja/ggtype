{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "outDir": "dist/cjs",
    "rootDir": "src",
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS", // Output to CommonJS module format
    "target": "ES2015", // Specify ECMAScript target version
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "e2e",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**"
  ]
}
