{
  "name": "ggtype",
  "version": "0.5.2",
  "description": "High-performance TypeScript library for type-safe data validation and client-server communication with bidirectional RPC, streaming support, and multiple transport options",
  "keywords": [
    "typescript",
    "validation",
    "schema",
    "rpc",
    "trpc",
    "api",
    "client-server",
    "bidirectional",
    "streaming",
    "websocket",
    "http",
    "type-safe",
    "types",
    "ajv",
    "zod-alternative",
    "data-validation",
    "real-time",
    "async-generator"
  ],
  "license": "MIT",
  "author": "samuelgja",
  "repository": {
    "type": "git",
    "url": "https://github.com/samuelgja/ggtype.git"
  },
  "homepage": "https://github.com/samuelgja/ggtype#readme",
  "bugs": {
    "url": "https://github.com/samuelgja/ggtype/issues"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "typescript": "src/index.ts",
  "scripts": {
    "test": "bun test",
    "lint": "bun eslint",
    "typecheck": "bun tsc --noEmit",
    "code-check": "bun typecheck && bun lint && bun test && bun format",
    "format": "bun prettier --write \"./**/*.{js,jsx,json,ts,tsx}\"",
    "build": "bun tsc --project tsconfig.build.json && bun tsc --project tsconfig.build.module.json",
    "docs": "typedoc"
  },
  "dependencies": {
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "fast-copy": "4.0.0",
    "json-schema": "^0.4.0",
    "nanoid": "^5.1.6",
    "ofetch": "^1.5.1"
  },
  "devDependencies": {
    "jsonschema": "^1.5.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "@babel/core": "^7.28.5",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@stylistic/eslint-plugin-jsx": "^4.4.1",
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@types/bun": "1.3.3",
    "@types/eslint": "^9.6.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "8.48.0",
    "@typescript-eslint/parser": "8.48.0",
    "bun-types": "1.3.3",
    "change-case-all": "^2.1.0",
    "eslint": "9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-depend": "^1.4.0",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-jsdoc": "^61.4.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unicorn": "62.0.0",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "prettier": "3.7.1",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.48.0",
    "elysia": "^1.4.16"
  }
}
